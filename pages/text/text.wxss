@font-face {
    font-family: 'iconFont';
    src: url('https://tstxxy.icu:3001/iconfont.woff');
}

.list {
    display: flex;
    flex-flow: column;
    align-items: center;
}

.title {
    width: 700rpx;
    font-size: 36rpx;
    font-weight: 600;
    margin: 10rpx 0rpx 10rpx 0rpx;
}

.first {
    display: flex;
    justify-content: space-between;
    height: 40rpx;
    width: 700rpx;
    font-size: 24rpx;
    font-weight: 600;
    color: rgb(168, 171, 180);
    margin: 5rpx 0rpx 15rpx 0rpx;
}

.line {
    background-color: rgb(240, 241, 243);
    height: 2rpx;
    width: 700rpx;
}

.list .author {
    display: flex;
    width: 700rpx;
    height: 50rpx;
    margin: 20rpx 0rpx 20rpx 0rpx;
}

.author .avatar {
    margin-right: 20rpx;
    width: 50rpx;
}

.author .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.author .name {
    align-self: center;
    font-size: 25rpx;
    font-weight: 600;
}

.article {
    display: flex;
    flex-direction: column;
    width: 700rpx;
}

.article .word {
    font-size: 32rpx;
    line-height: 56rpx;
}

.article image {
    width: 100%;
    align-self: center;
    margin: 15rpx 0rpx 15rpx 0rpx;
}

.rating {
    margin: 40rpx 0rpx 20rpx 0rpx;
    justify-content: space-between;
    display: flex;
    width: 650rpx;
    font-family: 'iconFont';
    font-size: medium;
}

.rating .share::before {
    content: '\e70f';
    color: #505050;
    margin-right: 10rpx;
    font-size: large;
}

.rating .comment::before {
    content: '\e639';
    color: #505050;
    margin-right: 10rpx;
    font-size: large;
}

.rating .like::before {
    content: '\e6e0';
    color: #00a1d6;
    margin-right: 10rpx;
    font-size: large;
}

.thickLine {
    width: 750rpx;
    height: 20rpx;
    background-color: rgb(247, 248, 250);
}

.comments .bar {
    width: 700rpx;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}

.bar .left {
    font-weight: bold;
}

.bar .right {
    color: grey;
}

.comments {
    display: flex;
    flex-flow: column;
    align-items: center;
}

.comments .wrap {
    display: flex;
    flex-flow: column;
    align-items: center;
}

.comments .line {
    background-color: rgb(240, 241, 243);
    height: 2rpx;
    width: 750rpx;
    background-color: tomato;
}

.comments .comment {
    display: flex;
    width: 700rpx;
    height: 300rpx;
    align-items: flex-start;
    margin: 20rpx 0rpx 20rpx 0;
}

.comments .comment .left {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}

.comments .comment .left image {
    width: 100%;
    border-radius: 50%;
}

.comments .comment .right {
    flex: 5;
    word-break: break-all;
    display: flex;
    flex-direction: column;

    overflow: hidden;
    background-color: hotpink;
}

.right .reviewer {
    background-color: blue;
}

.right .content {
    background-color: green;
}

.right .info {
    display: flex;
    background-color: grey;
}