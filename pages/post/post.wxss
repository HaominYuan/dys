page {
    height: 100%;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
}

.list>.top {
    width: 700rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 auto;
    margin-top: 20rpx;
}

.list>.top>.content {
    width: 100%;
    font-size: 32rpx;
}

.list>.top>.photo {
    width: 100%;
    display: flex;
    align-items: center;
}

.list>.top>.bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: honeydew;
}

.list>.top>.bottom>.position {
    background-color: hotpink;
}

.list>.bottom {
    background-color: rgb(234, 234, 234);
    flex: 1 0 auto;
    width: 750rpx;
}

.list>.bottom>.send {
    width: 700rpx;
    height: 75rpx;
    color: white;
    background-color: rgb(0, 161, 214);
    padding: 0;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.list>.bottom>.send::after {
    border: 0rpx;
}

image {
    width: 150rpx;
    height: 150rpx;
    margin: 10rpx;
}

.add {
    height: 150rpx;
    margin: 10rpx 10rpx 10rpx 0rpx!important;
    padding: 0 !important;
    position: relative;
    flex: 0 0 150rpx !important;
    border: 3rpx dashed grey !important;
}

.add::after {
    border: none;
}

.cross {
    background-color: grey;
    height: 50rpx;
    width: 10rpx;
    position: relative;
    left: 70rpx;
    top: 50rpx;
  }
  
  .cross::after {
    content: '';
    background-color: grey;
    position: absolute;
    height: 10rpx;
    width: 50rpx;
    top: 20rpx;
    left: -20rpx
  }