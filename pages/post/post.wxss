page {
    height: 100%;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
}

.list>.top {
    width: 700rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 auto;
}

.list>.top>.content {
    background-color: yellow;
    width: 100%;
}

.list>.top>.photo {
    background-color: yellowgreen;
    width: 100%;
}

.list>.top>.bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: honeydew;
}

.list>.top>.bottom>.position {
    background-color: hotpink;
}

.list>.bottom {
    background-color: rgb(234, 234, 234);
    flex: 1 0 auto;
    width: 750rpx;
}

.list>.bottom>.send {
    width: 700rpx;
    height: 75rpx;
    color: white;
    background-color: rgb(0, 161, 214);
    padding: 0;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.list>.bottom>.send::after {
    border: 0rpx;
}