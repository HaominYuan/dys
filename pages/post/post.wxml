<view class='list'>
	<view class='top'>
		<textarea class='content' placeholder='Say what you want to say~'></textarea>
		<view class='photo'>
			<mp-cells>
				<mp-cell>
					<mp-uploader bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}" files="{{files}}" max-count="5"></mp-uploader>
				</mp-cell>
			</mp-cells>
		</view>
		<view class='bottom'>
			<view class='position'>点击添加位置（长按删除）</view>
			<switch class='anonymous'>
			</switch>
		</view>
	</view>
	<view class='bottom'>
		<button class='send'>
			发送
		</button>
	</view>
</view>