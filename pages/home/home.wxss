/* pages/me/me.wxss */

.list {
  display: flex;
  flex-flow: column;
  align-items: center;
  background-color: yellow;
  box-sizing: border-box;
}

.text {
  display: flex;
  background-color: green;
  width: 700rpx;
  height: 200rpx;
  margin: 5rpx 0rpx 5rpx 0rpx;
}

.text .left {
  display: flex;
  flex-flow: column;
  flex: 5;
  word-break: break-all;
  background-color: red;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.text .right {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right .img {
  width: 100%;
  background-color: rgb(69, 42, 165);
  box-sizing: border-box;
}

.list .line {
  background-color: blue;
  height: 5rpx;
  width: 700rpx;
  box-sizing: border-box;
}

.left .title {
  background-color: green;
  flex: 4;
}

.text .bottom {
  display: flex;
  flex: 1;
  color: white;
  justify-content: space-between;
  align-items: center;
  font-size: 10px;
  background-color: coral;
}