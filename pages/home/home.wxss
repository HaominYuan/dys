/* pages/me/me.wxss */

.list {
  display: flex;
  flex-flow: column;
  align-items: center;
  background-color: yellow;
}

.word {
  display: flex;
  flex-flow: column;
  flex: 5;
  word-break: break-all;
  background-color: red;
  padding-right: 10rpx;
}

.img {
  flex: 2;
  background-color: rgb(69, 42, 165);
}

.disc {
  display: flex;
  background-color: green;
  width: 700rpx;
  height: 200rpx;
  overflow: hidden;
  margin: 5rpx 0rpx 5rpx 0rpx;
}

.line {
  background-color: blue;
  height: 5rpx;
  width: 700rpx;
}

.tit {
  background-color: green;
  flex: 4;
}

.nameTimes {
  display: flex;
  flex: 1;
  color: white;
  justify-content: space-between;
  font-size: 10px;
  background-color: coral;
}