/* pages/disc/disc.wxss */

.list {
    display: flex;
    flex-flow: column;
    background-color: yellow;
    align-items: center;
}

.first {
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    width: 700rpx;
    background-color: blue;
}

.author {
    display: flex;
    background-color: red;
    width: 700rpx;
}

.title {
    background-color: green;
    width: 700rpx;
}

.list image {
    background-color: burlywood;
}

.article {
    background-color: cadetblue;
    width: 700rpx;
}

.rating {
    background-color: chartreuse;
    justify-content: space-between;
    display: flex;
    width: 700rpx;
}

.replys {
    background-color: cornflowerblue;
    display: flex;
    flex-flow: column;
    width: 700rpx;
    align-items: center;
    overflow: hidden;
}

.reply {
    display: flex;
    background-color: darkcyan;
    width: 700rpx;
    height: 150rpx;
}

.replys .line {
    width: 750rpx;
    height: 5rpx;
    background-color: black;
}

.line {
    background-color: darkgrey;
    height: 15rpx;
    width: 750rpx;
}

.left {
    background-color: darkslateblue;
    opacity: 1;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.reply .left image {
    width: 100%;
    border-radius: 50%;
}

.right {
    background-color: red;
    flex: 4;
}

